<h2>登入</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, label:"密碼", required: false %>
    <%= f.input :remember_me,  label:"記住我", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
    <%= link_to("使用Facebook帳號登入", user_omniauth_authorize_path(:facebook), class: "btn btn-primary", style: "color:#FFFFFF;") %>

  </div>
<% end %>

<%= render "devise/shared/links" %>
